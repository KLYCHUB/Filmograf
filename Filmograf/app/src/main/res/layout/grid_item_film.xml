<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/background_with_radius">

    <ImageView
        android:id="@+id/film_resim"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        />

    <TextView
        android:id="@+id/film_isim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="8dp"
        android:textColor="@color/splash_background"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/film_aciklama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:textSize="14sp"
        android:textColor="@color/splash_background"
        android:minHeight="48dp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/film_vizyon_tarihi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:textSize="14sp"
        android:textColor="@color/secondary_text_color"
        android:minHeight="48dp"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/film_oyuncular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:textSize="14sp"
        android:textColor="@color/secondary_text_color"
        android:minHeight="48dp"
        android:maxLines="1"
        android:ellipsize="end"/>
</LinearLayout>
